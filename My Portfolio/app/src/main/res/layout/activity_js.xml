<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#251D37"
    tools:context=".JavaProjectsActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="40sp"
        android:layout_marginTop="50dp"
        android:text="NodeJS Projects"
        android:textSize="30sp"
        android:layout_gravity="center"
        android:gravity="center"
        android:textColor="@color/white"
        android:layout_marginBottom="20sp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20sp"
        android:orientation="vertical"
        android:layout_marginTop="20sp">

        <TextView
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:text="1. Save Any Info"
            android:padding="10sp"
            android:layout_gravity="center"
            android:textColor="#fff"
            />
        <TextView
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:text="2. Secret Page"
            android:padding="10sp"
            android:layout_gravity="center"
            android:textColor="#fff"
            />
        <TextView
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:text="3. Analog Clock"
            android:padding="10sp"
            android:layout_gravity="center"
            android:textColor="#fff"
            />
        <TextView
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:text="4. Infinite Scrolling"
            android:padding="10sp"
            android:layout_gravity="center"
            android:textColor="#fff"
            />

        <TextView
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:text="5. Calender"
            android:padding="10sp"
            android:layout_gravity="center"
            android:textColor="#fff"
            />
        <TextView
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:text="6. Weather App"
            android:padding="10sp"
            android:layout_gravity="center"
            android:textColor="#fff"
            />

        <Button
            android:id="@+id/jsRepo"
            android:layout_marginTop="100dp"
            android:layout_width="200dp"
            android:layout_height="80dp"
            android:text="Visit Repo"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:layout_gravity="center"

            />


    </LinearLayout>


</LinearLayout>
